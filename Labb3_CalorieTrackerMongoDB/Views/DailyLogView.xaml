<UserControl x:Class="Labb3_CalorieTrackerMongoDB.Views.DailyLogView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Labb3_CalorieTrackerMongoDB.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800" >


    <Grid Margin="10">
        <Grid Margin="10">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <!-- Date -->
                <RowDefinition Height="Auto"/>
                <!-- Daily Goals -->
                <RowDefinition Height="*"/>
                <!-- Foods DataGrid -->
                <RowDefinition Height="Auto"/>
                <!-- Totals -->
            </Grid.RowDefinitions>

            <!-- ===== DATE ===== -->
            <TextBlock Grid.Row="0" Text="Date: 2026-01-10"
                   FontSize="16" FontWeight="Bold"
                   Margin="0,0,0,10"/>

            <!-- ===== DAILY GOALS ===== -->
            <Border Grid.Row="1" Background="#EEE" Padding="10" CornerRadius="8" Margin="0,0,0,10">
                <StackPanel>
                    <TextBlock Text="Daily Goals" FontSize="14" FontWeight="Bold" Margin="0,0,0,5"/>
                    <WrapPanel>
                        <TextBlock Text="Calories:" FontWeight="SemiBold"/>
                        <TextBlock Text="1500" Margin="5,0,15,0"/>

                        <TextBlock Text="Protein:" FontWeight="SemiBold"/>
                        <TextBlock Text="100g" Margin="5,0,15,0"/>

                        <TextBlock Text="Carbs:" FontWeight="SemiBold"/>
                        <TextBlock Text="150g" Margin="5,0,15,0"/>

                        <TextBlock Text="Fat:" FontWeight="SemiBold"/>
                        <TextBlock Text="50g"/>
                    </WrapPanel>
                </StackPanel>
            </Border>

            <!-- ===== FOODS TABLE ===== -->
            <DataGrid Grid.Row="2" x:Name="TodayFoodsGrid"
                  AutoGenerateColumns="False" Margin="0,0,0,10">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Time" Binding="{Binding Time, StringFormat=t}" Width="80"/>
                    <DataGridTextColumn Header="Food" Binding="{Binding Name}" Width="*"/>
                    <DataGridTextColumn Header="Protein" Binding="{Binding Protein}" Width="80"/>
                    <DataGridTextColumn Header="Carbs" Binding="{Binding Carbs}" Width="80"/>
                    <DataGridTextColumn Header="Fat" Binding="{Binding Fat}" Width="80"/>
                    <DataGridTextColumn Header="Calories" Binding="{Binding Calories}" Width="100"/>
                </DataGrid.Columns>
            </DataGrid>

            <!-- ===== TOTALS ===== -->
            <Border Grid.Row="3" Background="#F5F5F5" Padding="10" CornerRadius="8">
                <WrapPanel HorizontalAlignment="Right">
                    <TextBlock Text="Total Calories:" FontWeight="SemiBold"/>
                    <TextBlock Text="{Binding TotalCalories}" Margin="5,0,15,0"/>

                    <TextBlock Text="Protein:" FontWeight="SemiBold"/>
                    <TextBlock Text="{Binding TotalProtein}" Margin="5,0,15,0"/>

                    <TextBlock Text="Carbs:" FontWeight="SemiBold"/>
                    <TextBlock Text="{Binding TotalCarbs}" Margin="5,0,15,0"/>

                    <TextBlock Text="Fat:" FontWeight="SemiBold"/>
                    <TextBlock Text="{Binding TotalFat}"/>
                </WrapPanel>
            </Border>

        </Grid>











    </Grid>
</UserControl>
