<UserControl x:Class="Labb3_CalorieTrackerMongoDB.Views.DailyLogView"
                 xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                 xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                 xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                 xmlns:viewmodels="clr-namespace:Labb3_CalorieTrackerMongoDB.ViewModels"
                 mc:Ignorable="d"
                 d:DesignHeight="500" d:DesignWidth="900"
                 d:DataContext="{d:DesignInstance Type=viewmodels:DailyLogViewModel, IsDesignTimeCreatable=True}">

    <UserControl.Resources>
        <SolidColorBrush x:Key="MatchaPrimary" Color="#7A8450"/>
        <SolidColorBrush x:Key="MatchaPrimaryDark" Color="#5F6B3A"/>
        <SolidColorBrush x:Key="VanillaBackground" Color="#F8EFDA"/>
        <SolidColorBrush x:Key="CardBackground" Color="#FFFFFF"/>
        <SolidColorBrush x:Key="BorderBrushVanilla" Color="#D8D1B8"/>
        <SolidColorBrush x:Key="TextPrimary" Color="#3F4A2C"/>
        <SolidColorBrush x:Key="TextMuted" Color="#8A8F75"/>

        <Style x:Key="MatchaButtonStyle" TargetType="Button">
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Background" Value="{StaticResource MatchaPrimary}"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Padding" Value="12,6"/>
            <Setter Property="Height" Value="40"/>
            <Setter Property="MinWidth" Value="130"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="SnapsToDevicePixels" Value="True"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="18">
                            <ContentPresenter HorizontalAlignment="Center"
                                                  VerticalAlignment="Center"
                                                  Margin="10,0"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="{StaticResource MatchaPrimaryDark}"/>
                </Trigger>
                <Trigger Property="IsEnabled" Value="False">
                    <Setter Property="Background" Value="#C9CFB2"/>
                    <Setter Property="Foreground" Value="#F5F5F5"/>
                    <Setter Property="Cursor" Value="Arrow"/>
                </Trigger>
            </Style.Triggers>
        </Style>


        <Style x:Key="MatchaButtonSmallStyle" TargetType="Button">
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Background" Value="{StaticResource MatchaPrimary}"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Padding" Value="10,4"/>
            <Setter Property="Height" Value="30"/>
            <Setter Property="MinWidth" Value="120"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="14">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="{StaticResource MatchaPrimaryDark}"/>
                </Trigger>
                <Trigger Property="IsEnabled" Value="False">
                    <Setter Property="Background" Value="#C9CFB2"/>
                    <Setter Property="Foreground" Value="#F5F5F5"/>
                    <Setter Property="Cursor" Value="Arrow"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style TargetType="DataGridColumnHeader">
            <Setter Property="Background" Value="#E1E6C9"/>
            <Setter Property="Foreground" Value="{StaticResource TextPrimary}"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="8,4"/>
        </Style>

        <Style TargetType="DataGridRow">
            <Setter Property="Background" Value="#FAF7EE"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Foreground" Value="{StaticResource TextPrimary}"/>
            <Style.Triggers>
                <Trigger Property="AlternationIndex" Value="1">
                    <Setter Property="Background" Value="#F3EFDF"/>
                </Trigger>
                <Trigger Property="IsSelected" Value="True">
                    <Setter Property="Background" Value="#D6E1B4"/>
                    <Setter Property="Foreground" Value="{StaticResource TextPrimary}"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </UserControl.Resources>

    <Grid Background="{StaticResource VanillaBackground}">
        <Grid Margin="25">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>

                <RowDefinition Height="Auto"/>

                <RowDefinition Height="*"/>

                <RowDefinition Height="Auto"/>

            </Grid.RowDefinitions>


            <StackPanel Grid.Row="0" Margin="0,0,0,0">
                <TextBlock Text="Daily Log"
                               FontSize="26"
                               FontWeight="Bold"
                               Foreground="{StaticResource MatchaPrimary}"/>
                <TextBlock Text="{Binding SelectedDate, StringFormat='Date: {0:D}'}"
                               FontSize="13"
                               Foreground="{StaticResource TextMuted}"
                               Margin="0,0,0,5"/>
            </StackPanel>


            <Grid Grid.Row="1" Margin="0,0,0,10">
                <Grid.RowDefinitions>
                    <RowDefinition Height="29*"/>
                    <RowDefinition Height="15*"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="1"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>


                <Border Grid.Column="0"
                            Background="{StaticResource CardBackground}"
                            CornerRadius="18"
                            BorderBrush="{StaticResource BorderBrushVanilla}"
                            BorderThickness="1"
                            Padding="10" Grid.RowSpan="2">
                    <StackPanel>
                        <TextBlock Text="Select date"
                                       FontWeight="SemiBold"
                                       Foreground="{StaticResource TextPrimary}"
                                       Margin="0,0,0,6"/>
                        <DatePicker SelectedDate="{Binding SelectedDate, Mode=TwoWay}" Width="160"/>
                        <TextBlock Text="Change date to view history."
                                       FontSize="11"
                                       Foreground="{StaticResource TextMuted}"
                                       Margin="0,0,0,10"/>
                    </StackPanel>
                </Border>


                <Border Grid.Column="2"
                            Background="{StaticResource CardBackground}"
                            CornerRadius="18"
                            BorderBrush="{StaticResource BorderBrushVanilla}"
                            BorderThickness="1"
                            Padding="14" Grid.RowSpan="2">
                    <StackPanel>

                        <!-- Title + Set new goal button -->
                        <Grid Margin="0,0,0,8">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <TextBlock Text="Daily Goals"
                                           Grid.Column="0"
                                           FontSize="14"
                                           FontWeight="Bold"
                                           Foreground="{StaticResource TextPrimary}"
                                           VerticalAlignment="Center"/>

                            <Button Grid.Column="1"
                                        Style="{StaticResource MatchaButtonSmallStyle}"
                                        Content="Set new goal"
                                        Command="{Binding OpenSetNewGoalDiaLogCommand}"
                                        Margin="10,0,0,0"/>
                        </Grid>

                        <WrapPanel>
                            <TextBlock Text="Calories:" FontWeight="SemiBold" Foreground="{StaticResource TextMuted}"/>
                            <TextBlock Text="{Binding GoalCalories}" Margin="6,0,18,0" Foreground="{StaticResource TextPrimary}"/>

                            <TextBlock Text="Protein:" FontWeight="SemiBold" Foreground="{StaticResource TextMuted}"/>
                            <TextBlock Text="{Binding GoalProtein}" Margin="6,0,18,0" Foreground="{StaticResource TextPrimary}"/>

                            <TextBlock Text="Carbs:" FontWeight="SemiBold" Foreground="{StaticResource TextMuted}"/>
                            <TextBlock Text="{Binding GoalCarbs}" Margin="6,0,18,0" Foreground="{StaticResource TextPrimary}"/>

                            <TextBlock Text="Fat:" FontWeight="SemiBold" Foreground="{StaticResource TextMuted}"/>
                            <TextBlock Text="{Binding GoalFat}" Margin="6,0,0,0" Foreground="{StaticResource TextPrimary}"/>
                        </WrapPanel>
                    </StackPanel>
                </Border>
            </Grid>


            <Border Grid.Row="2"
                        Background="{StaticResource CardBackground}"
                        CornerRadius="18"
                        BorderBrush="{StaticResource BorderBrushVanilla}"
                        BorderThickness="1"
                        Padding="8">
                <DataGrid ItemsSource="{Binding TodaysItems}"
                              SelectedItem="{Binding SelectedItem, Mode=TwoWay}"
                              AutoGenerateColumns="False"
                              IsReadOnly="False"
                              CanUserAddRows="False"
                              GridLinesVisibility="None"
                              HeadersVisibility="Column"
                              BorderThickness="0"
                              AlternationCount="2">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Food" Binding="{Binding Name}" Width="*" IsReadOnly="True"/>
                        <DataGridTextColumn Header="Amount" Width="90">
                            <DataGridTextColumn.Binding>
                                <Binding Path="Amount" Mode="TwoWay" UpdateSourceTrigger="PropertyChanged"/>
                            </DataGridTextColumn.Binding>

                        </DataGridTextColumn>
                        <DataGridTextColumn Header="Unit" Binding="{Binding LogUnit}" Width="70" IsReadOnly="True"/>
                        <DataGridTextColumn Header="Protein" Binding="{Binding Protein}" Width="90" IsReadOnly="True"/>
                        <DataGridTextColumn Header="Carbs" Binding="{Binding Carbs}" Width="90" IsReadOnly="True" />
                        <DataGridTextColumn Header="Fat" Binding="{Binding Fat}" Width="90" IsReadOnly="True" />
                        <DataGridTextColumn Header="Calories" Binding="{Binding Calories}" IsReadOnly="True"  Width="90"/>
                    </DataGrid.Columns>
                </DataGrid>
            </Border>

            <Grid Grid.Row="3" Margin="0,16,0,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <Border Grid.Column="0"
                            Background="#F5F5F5"
                            Padding="12"
                            CornerRadius="18"
                            BorderBrush="{StaticResource BorderBrushVanilla}"
                            BorderThickness="1">
                    <WrapPanel>
                        <TextBlock Text="Total Calories:" FontWeight="SemiBold"/>
                        <TextBlock Text="{Binding TotalCalories}" Margin="6,0,18,0"/>

                        <TextBlock Text="Protein:" FontWeight="SemiBold"/>
                        <TextBlock Text="{Binding TotalProtein}" Margin="6,0,18,0"/>

                        <TextBlock Text="Carbs:" FontWeight="SemiBold"/>
                        <TextBlock Text="{Binding TotalCarbs}" Margin="6,0,18,0"/>

                        <TextBlock Text="Fat:" FontWeight="SemiBold"/>
                        <TextBlock Text="{Binding TotalFat}" Margin="6,0,0,0"/>
                    </WrapPanel>
                </Border>

                <Button Grid.Column="1"
                            Style="{StaticResource MatchaButtonStyle}"
                            Content="Delete selected"
                            Command="{Binding DeleteItemCommand}"
                            CommandParameter="{Binding SelectedItem}"
                            Margin="12,0,0,0"/>
            </Grid>
        </Grid>
    </Grid>
</UserControl>
