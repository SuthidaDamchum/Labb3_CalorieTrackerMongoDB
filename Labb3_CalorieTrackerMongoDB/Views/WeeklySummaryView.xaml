<UserControl x:Class="Labb3_CalorieTrackerMongoDB.Views.WeeklySummaryView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Labb3_CalorieTrackerMongoDB.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" Text="Weekly Summary"
                   FontSize="22" FontWeight="Bold"
                   HorizontalAlignment="Center"
                   Margin="0,0,0,10"/>

        <TextBlock Grid.Row="1"
                   Text="Legend: ✅ = Goal met or under, ⚠️ = Exceeded goal"
                   FontSize="12"
                   FontStyle="Italic"
                   Foreground="Gray"
                   Margin="0,0,0,10"/>

   
        <DataGrid x:Name="WeeklySummaryGrid"
                  Grid.Row="2"
                  AutoGenerateColumns="False"
                  CanUserAddRows="False"
                  Margin="0,0,0,10"
                  IsReadOnly="True">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Date" Binding="{Binding Date, StringFormat=d}" Width="60"/>
                <DataGridTextColumn Header="Calories" Binding="{Binding TotalCalories}" Width="100"/>
                <DataGridTextColumn Header="Protein" Binding="{Binding TotalProtein}" Width="100"/>
                <DataGridTextColumn Header="Carbs" Binding="{Binding TotalCarbs}" Width="100"/>
                <DataGridTextColumn Header="Fat" Binding="{Binding TotalFat}" Width="100"/>
                <DataGridTextColumn Header="Calories Status" Binding="{Binding CaloriesStatus}" Width="120"/>
                <DataGridTextColumn Header="Protein Status" Binding="{Binding ProteinStatus}" Width="120"/>
                <DataGridTextColumn Header="Result" Binding="{Binding Result}" Width="80"/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</UserControl>