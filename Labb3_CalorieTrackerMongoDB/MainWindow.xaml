<Window x:Class="Labb3_CalorieTrackerMongoDB.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:viewmodels="clr-namespace:Labb3_CalorieTrackerMongoDB.ViewModels"
        Title="Calorie Tracker" Height="450" Width="800"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d">

    <Window.DataContext>
        <viewmodels:MainWindowViewModel/>
    </Window.DataContext>

    <DockPanel>

 
        <StackPanel DockPanel.Dock="Top" Orientation="Horizontal" Background="#2D2D30" Height="50">
            <TextBlock Text="Calorie Tracker" 
                       Foreground="White" FontSize="18" FontWeight="Bold" 
                       VerticalAlignment="Center" Margin="10"/>

            <Button Content="Today's Log" Width="120" Margin="10,5"
                    Command="{Binding ShowTodaysLogCommand}"/>

            <Button Content="Food List" Width="120" Margin="10,5"
                    Command="{Binding ShowFoodListCommand}"/>

            <Button Content="Weekly Summary" Width="140" Margin="10,5"
                    Command="{Binding ShowWeeklySummaryCommand}"/>
        </StackPanel>

 
        <ContentControl Content="{Binding CurrentView}" Background="#F5F5F5"/>

        <ContentControl x:Name="DailyLogViewControl" />
    </DockPanel>
</Window>
