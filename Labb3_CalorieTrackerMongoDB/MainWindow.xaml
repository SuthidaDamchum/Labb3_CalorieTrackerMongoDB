<Window x:Class="Labb3_CalorieTrackerMongoDB.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Labb3_CalorieTrackerMongoDB"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">

    <DockPanel>

    
        <StackPanel DockPanel.Dock="Top" Orientation="Horizontal" Background="#2D2D30" Height="50">

            <TextBlock Text="Calorie Tracker" 
                       Foreground="White" FontSize="18" FontWeight="Bold" 
                       VerticalAlignment="Center" Margin="10"/>

            <Button Content="Today's Log" 
                    Margin="10,5"
                    Width="120"
                    Command=""/>

            <Button Content="Food List" 
                    Margin="10,5"
                    Width="120"
                   Command=""/>

            <Button Content="Weekly Summary" 
                    Margin="10,5"
                    Width="140"
                    Command=""/>
        </StackPanel>

       
        <ContentControl x:Name="MainContent" Background="#F5F5F5"/>
    </DockPanel>
</Window>