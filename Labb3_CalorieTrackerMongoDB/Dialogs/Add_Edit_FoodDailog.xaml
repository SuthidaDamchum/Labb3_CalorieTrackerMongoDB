<Window x:Class="Labb3_CalorieTrackerMongoDB.Dialogs.Add_Edit_FoodDailog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Labb3_CalorieTrackerMongoDB.Dialogs"
        xmlns:viewmodels="clr-namespace:Labb3_CalorieTrackerMongoDB.ViewModels"
        mc:Ignorable="d"
        Title="Add/Edit Food" Height="350" Width="450"
        WindowStartupLocation="CenterScreen"
        Background="#F5F9F4"
        ResizeMode="NoResize"
        WindowStyle="None">

    <Border CornerRadius="12" Background="White" Padding="20" 
            BorderBrush="#C1E1C1" BorderThickness="2" SnapsToDevicePixels="True">

        <Grid Margin="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

  
            <TextBlock Grid.Row="0" Text="Add / Edit Food"
                       FontSize="24" FontWeight="Bold" Foreground="#2E7D32"
                       HorizontalAlignment="Center" Margin="0,0,0,20"/>

       
            <StackPanel Grid.Row="1" VerticalAlignment="Top">
   
                <StackPanel Margin="0,0,0,15">
                    <TextBlock Text="Name" FontWeight="SemiBold" Foreground="#2E7D32"/>
                    <TextBox Text="{Binding FoodItem.Name, UpdateSourceTrigger=PropertyChanged}" 
                             Padding="8" FontSize="14" Background="#F1F8F1" BorderBrush="#A5D6A7" BorderThickness="1"/>
                </StackPanel>

   
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    
                    <StackPanel Grid.Column="0" Margin="0,0,10,0">
                        <TextBlock Text="Protein" FontWeight="SemiBold" Foreground="#2E7D32"/>
                        <TextBox Text="{Binding FoodItem.Protein, UpdateSourceTrigger=PropertyChanged}" 
                                 Padding="6" FontSize="14" Background="#F1F8F1" BorderBrush="#A5D6A7" BorderThickness="1"/>
                    </StackPanel>


                    <StackPanel Grid.Column="1" Margin="0,0,10,0">
                        <TextBlock Text="Carbs" FontWeight="SemiBold" Foreground="#2E7D32"/>
                        <TextBox Text="{Binding FoodItem.Carbs, UpdateSourceTrigger=PropertyChanged}" 
                                 Padding="6" FontSize="14" Background="#F1F8F1" BorderBrush="#A5D6A7" BorderThickness="1"/>
                    </StackPanel>

                 
                    <StackPanel Grid.Column="2" Margin="0,0,10,0">
                        <TextBlock Text="Fat" FontWeight="SemiBold" Foreground="#2E7D32"/>
                        <TextBox Text="{Binding FoodItem.Fat, UpdateSourceTrigger=PropertyChanged}" 
                                 Padding="6" FontSize="14" Background="#F1F8F1" BorderBrush="#A5D6A7" BorderThickness="1"/>
                    </StackPanel>

         
                    <StackPanel Grid.Column="3">
                        <TextBlock Text="Calories" FontWeight="SemiBold" Foreground="#2E7D32"/>
                        <TextBox Text="{Binding FoodItem.Calories, UpdateSourceTrigger=PropertyChanged}" 
                                 Padding="6" FontSize="14" Background="#F1F8F1" BorderBrush="#A5D6A7" BorderThickness="1"/>
                    </StackPanel>
                </Grid>
            </StackPanel>

           
            <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,20,0,0">
                <Button Content="Cancel" Width="90" Height="36" Command="{Binding CancelCommand}" 
                        CommandParameter="{Binding RelativeSource={RelativeSource AncestorType=Window}}" 
                        Background="#E0F2F1" Foreground="#2E7D32" FontWeight="SemiBold" 
                        BorderBrush="#A5D6A7" BorderThickness="1"/>
                <Button Content="Save" Width="90" Height="36" Command="{Binding SaveCommand}" 
                        CommandParameter="{Binding RelativeSource={RelativeSource AncestorType=Window}}" 
                        Background="#2E7D32" Foreground="White" FontWeight="Bold" Margin="10,0,0,0"/>
            </StackPanel>
        </Grid>
    </Border>
</Window>
